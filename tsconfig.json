{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    // these options must change after TS migration is completed
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "strict": false,
    // End
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "baseUrl": "src",
    "paths": {
      // "@config": ["config.ts"]
      // "@middlewares/*": ["middlewares/*"]
      // "@services": ["services/*"],
      // "@schemas": ["schemas/*"],
      // "@routes": ["routes/*"]
    }
    // "paths": {
    // }
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
